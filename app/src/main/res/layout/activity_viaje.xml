<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFCC"
    android:orientation="vertical"
    tools:context=".ViajeActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="7pt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Viaje"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="11pt"
        app:fontFamily="sans-serif-black" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="7pt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese datos:"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="9pt" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

    <EditText
        android:id="@+id/etxKmRecor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="KilÃ³metros Recorridos"
        android:textColor="#111111"
        android:textColorHint="#111111"
        android:textSize="10pt"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/etxGasxL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio de gasolina por litro"
        android:textColor="#111111"
        android:textColorHint="#111111"
        android:textSize="10pt"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/etxDinGas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dinero gastado en gasolina"
        android:textColor="#111111"
        android:textColorHint="#111111"
        android:textSize="10pt"
        android:inputType="numberDecimal"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese el tiempo de viaje"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="9pt" />

    <EditText
        android:id="@+id/etxHorasV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Horas de viaje..."
        android:textColor="#111111"
        android:textColorHint="#111111"
        android:textSize="10pt"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etxMinV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Minutos de viaje..."
        android:textColor="#111111"
        android:textColorHint="#111111"
        android:textSize="10pt"
        android:inputType="number"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

    <Button
        android:id="@+id/btnCalcularViaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="10pt" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

    <TextView
        android:id="@+id/txvGasKm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consumo de gasolina por km"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="9pt" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

    <TextView
        android:id="@+id/txvGasx100K"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consumo de gasolina por 100km"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="9pt" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

    <TextView
        android:id="@+id/txvVelMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Velocidad Media"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="9pt" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5pt" />

<Button
android:id="@+id/btnRegresarViaje"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Regresar"
android:textSize="7pt" />

    </LinearLayout>